<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:sfEntry="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
             xmlns:LocalViewModel="clr-namespace:AfriLearn.ViewModels"
             mc:Ignorable="d"
             x:Class="AfriLearn.Views.PasswordRecoveryConfirmPage"
             BackgroundImageSource="GoToSchool">
    
    <ContentPage.BindingContext>
        <LocalViewModel:ConfirmReceivedPasswordRecoveryCodeViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="0, 20, 0, 0">
                    <StackLayout>
                        <Label Text="Cafrilearn"
                           VerticalOptions="Start"
                           HorizontalOptions="CenterAndExpand"
                           FontSize="24"/>
                        
                        <Label Text="Reset your Cafrilearn Password"
                           HorizontalOptions="CenterAndExpand"/>
                    </StackLayout>
                </Grid>
                
                <Grid Grid.Row="1">
                    <StackLayout VerticalOptions="CenterAndExpand">

                        <Label Text="Enter the code sent to your email to change your password"
                            TextColor="White" />
                        
                        <sfEntry:SfTextInputLayout EnablePasswordVisibilityToggle="True"
                                               ContainerType="Outlined"
                                               OutlineCornerRadius="14"
                                               HeightRequest="60">

                        <Entry Text="{Binding ConfirmationCode}"
                           Placeholder="Confrmation Code"
                           PlaceholderColor="White"
                           ReturnCommand="{Binding ConfirmReceivedPasswordRecoveryCodeCommand}"
                           Keyboard="Plain"
                          />
                        </sfEntry:SfTextInputLayout>
                    </StackLayout>
                </Grid>
                
                <Grid Grid.Row="2">
                    <StackLayout>
                        <Button Text="Next"
                          CornerRadius="20"
                         HeightRequest="40"
                         Command="{Binding ConfirmReceivedPasswordRecoveryCodeCommand}"/>
                    </StackLayout>
                </Grid>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>